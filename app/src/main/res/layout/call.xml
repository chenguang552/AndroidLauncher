<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="end">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center|fill">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="40dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:gravity="center">

			<TextView
				android:layout_height="60dp"
				android:id="@+id/phoneNumber"
				android:gravity="end"
				android:background="#00000000"
				android:textColor="#EBF4EFEF"
				android:textSize="54sp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:inputType="phone"
				android:maxWidth="300dp"
				android:layout_width="wrap_content"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="40dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="80dp"
					android:gravity="center_horizontal">

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="1"
						android:textSize="60sp"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:textColorHint="#FFF10B0B"
						android:textColorHighlight="#FFEC1818"
						android:onClick="oneNumClick1"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="2"
						android:textSize="60sp"
						android:textColorHint="#FFF10B0B"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClick2"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="3"
						android:textSize="60sp"
						android:textColorHint="#FFF10B0B"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClick3"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="80dp"
					android:gravity="center_horizontal">

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="4"
						android:textSize="60sp"
						android:textColorHint="#FFF10B0B"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClick4"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="5"
						android:textSize="60sp"
						android:textColorHint="#FFF10B0B"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClick5"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="6"
						android:textSize="60sp"
						android:textColorHint="#FFF10B0B"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClick6"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="80dp"
					android:gravity="center_horizontal">

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="7"
						android:textSize="60sp"
						android:textColorHint="#FFF10B0B"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClick7"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="8"
						android:textSize="60sp"
						android:textColorHint="#FFF10B0B"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClick8"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="9"
						android:textSize="60sp"
						android:textColorHint="#FFF10B0B"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClick9"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="80dp"
					android:gravity="center_horizontal">

					<Button
						android:layout_width="80dp"
						android:layout_height="match_parent"
						android:text="#"
						android:textSize="57sp"
						android:textColor="#C4BDBEBD"
						android:background="#00000000"
						android:onClick="oneNumClickSharp"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="match_parent"
						android:text="0"
						android:textSize="60sp"
						android:textColorHint="#FFF10B0B"
						android:background="#00000000"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClick0"/>

					<Button
						android:layout_width="80dp"
						android:layout_height="match_parent"
						android:text="删"
						android:textSize="54sp"
						android:background="#00000000"
						android:textColor="#C4BDBEBD"
						android:onClick="oneNumClickDelete"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:gravity="center_horizontal">

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="80dp"
					android:gravity="center_horizontal">

					<Button
						android:layout_width="180dp"
						android:layout_height="match_parent"
						android:text="拨号"
						android:textSize="54sp"
						android:textColorHint="#FFF10B0B"
						android:background="#8D3EE912"
						android:textColor="#FFFFFFFF"
						android:onClick="oneNumClickCall"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="60dp"/>

</LinearLayout>

